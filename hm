<script>
/* Progress bar & snap tracking */
const main = document.getElementById('slides');
const bar = document.getElementById('bar');
main.addEventListener('scroll', ()=>{
  const progress = (main.scrollTop)/(main.scrollHeight - main.clientHeight);
  bar.style.width = (progress*100).toFixed(1) + '%';
});

/* Mode toggle (label only for demo) */
const mode = document.getElementById('mode');
const modeLabel = document.getElementById('modeLabel');
mode.addEventListener('change', ()=>{
  modeLabel.textContent = mode.checked ? 'الاختلافات أولاً' : 'التشابهات + الاختلافات';
  // Simple visual reorder: jump to slide 3 if differences-first
  if(mode.checked) location.hash = '#s3'; else location.hash = '#s2';
});

/* Dark / Light quick toggle (cosmetic) */
const darkBtn = document.getElementById('darkToggle');
let light = false;
darkBtn.addEventListener('click', ()=>{
  light = !light;
  document.documentElement.style.setProperty('--bg', light ? '#f6f8ff' : '#0f1220');
  document.documentElement.style.setProperty('--card', light ? '#ffffff' : '#151a2e');
  document.documentElement.style.setProperty('--text', light ? '#0b1022' : '#eaf0ff');
  document.documentElement.style.setProperty('--muted', light ? '#4b5a86' : '#9aa4c7');
  document.documentElement.style.setProperty('--accent', light ? '#3b66ff' : '#7aa2ff');
  document.documentElement.style.setProperty('--accent2', light ? '#0bbd8c' : '#5bf6c8');
});

/* Presentation mode: full-screen + first slide */
document.getElementById('present').addEventListener('click', async ()=>{
  location.hash = '#s1';
  if (document.fullscreenEnabled && !document.fullscreenElement){
    await document.documentElement.requestFullscreen().catch(()=>{});
  }
});

/* Keyboard quick nav */
document.addEventListener('keydown', (e)=>{
  const slides = ['#s1','#s2','#s3','#s4','#s5'];
  const idx = slides.indexOf(location.hash || '#s1');
  if(e.key === 'ArrowDown' || e.key === 'PageDown'){ location.hash = slides[Math.min(idx+1, slides.length-1)]; }
  if(e.key === 'ArrowUp'   || e.key === 'PageUp'){   location.hash = slides[Math.max(idx-1, 0)]; }
});
</script>
</body>
